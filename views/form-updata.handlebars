{{#if titulo}}

<form action="/up/{{id}}" method="POST">
    <p>Titulo: </p>
    <input type="text" name="titulo" value="{{titulo}}">
    <p>Conteudo: </p>
    <textarea name="conteudo" id="conteudo" cols="30" rows="10">{{conteudo}}</textarea>
    <button type="submit">Editar postagem</button>
</form>

{{/if}}